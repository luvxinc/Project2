{
  "apiName": "Post-Order API",
  "version": "v2",
  "baseUrl": "https://api.ebay.com/post-order/v2",
  "description": "处理订单取消、退货、争议和查询。此 API 用于解决买卖双方的售后问题。",
  "resources": {
    "cancellation": {
      "description": "取消订单管理",
      "methods": [
        {
          "name": "approveCancellation",
          "httpMethod": "POST",
          "path": "/cancellation/{cancelId}/approve",
          "summary": "批准取消请求",
          "deprecated": false
        },
        {
          "name": "checkCancellationEligibility",
          "httpMethod": "POST",
          "path": "/cancellation/check_eligibility",
          "summary": "检查是否可以取消",
          "deprecated": false
        },
        {
          "name": "confirmCancellationRefund",
          "httpMethod": "POST",
          "path": "/cancellation/{cancelId}/confirm",
          "summary": "买家确认收到退款",
          "deprecated": true,
          "deprecationDate": "2026-03-02"
        },
        {
          "name": "createCancellationRequest",
          "httpMethod": "POST",
          "path": "/cancellation",
          "summary": "创建取消请求",
          "deprecated": false
        },
        {
          "name": "getCancellation",
          "httpMethod": "GET",
          "path": "/cancellation/{cancelId}",
          "summary": "获取取消详情",
          "deprecated": false
        },
        {
          "name": "rejectCancellation",
          "httpMethod": "POST",
          "path": "/cancellation/{cancelId}/reject",
          "summary": "拒绝取消请求",
          "deprecated": false
        },
        {
          "name": "searchCancellations",
          "httpMethod": "GET",
          "path": "/cancellation/search",
          "summary": "搜索取消记录",
          "deprecated": false
        }
      ]
    },
    "caseManagement": {
      "description": "案例管理",
      "methods": [
        {
          "name": "appealCaseDecision",
          "httpMethod": "POST",
          "path": "/casemanagement/{caseId}/appeal",
          "summary": "对案例裁决提出申诉",
          "deprecated": false
        },
        {
          "name": "closeCase",
          "httpMethod": "POST",
          "path": "/casemanagement/{caseId}/close",
          "summary": "买家关闭案例",
          "deprecated": true,
          "deprecationDate": "2026-03-02"
        },
        {
          "name": "getCase",
          "httpMethod": "GET",
          "path": "/casemanagement/{caseId}",
          "summary": "获取案例详情",
          "deprecated": false
        },
        {
          "name": "issueCaseRefund",
          "httpMethod": "POST",
          "path": "/casemanagement/{caseId}/issue_refund",
          "summary": "卖家发起退款",
          "deprecated": true,
          "deprecationDate": "2026-03-02"
        },
        {
          "name": "provideCaseShipmentInfo",
          "httpMethod": "POST",
          "path": "/casemanagement/{caseId}/provide_shipment_info",
          "summary": "提供物流信息",
          "deprecated": true,
          "deprecationDate": "2026-03-02"
        },
        {
          "name": "provideReturnAddress",
          "httpMethod": "POST",
          "path": "/casemanagement/{caseId}/provide_return_address",
          "summary": "提供退货地址",
          "deprecated": true,
          "deprecationDate": "2026-03-02"
        },
        {
          "name": "searchCases",
          "httpMethod": "GET",
          "path": "/casemanagement/search",
          "summary": "搜索案例",
          "deprecated": false
        }
      ]
    },
    "inquiry": {
      "description": "查询/咨询管理",
      "methods": [
        {
          "name": "checkInquiryEligibility",
          "httpMethod": "POST",
          "path": "/inquiry/check_eligibility",
          "summary": "检查是否可以开启咨询",
          "deprecated": false
        },
        {
          "name": "closeInquiry",
          "httpMethod": "POST",
          "path": "/inquiry/{inquiryId}/close",
          "summary": "关闭咨询",
          "deprecated": true,
          "deprecationDate": "2026-03-16"
        },
        {
          "name": "confirmInquiryRefund",
          "httpMethod": "POST",
          "path": "/inquiry/{inquiryId}/confirm_refund",
          "summary": "确认退款已收到",
          "deprecated": true,
          "deprecationDate": "2026-03-16"
        },
        {
          "name": "createInquiry",
          "httpMethod": "POST",
          "path": "/inquiry",
          "summary": "创建咨询",
          "deprecated": true,
          "deprecationDate": "2026-03-16"
        },
        {
          "name": "escalateInquiry",
          "httpMethod": "POST",
          "path": "/inquiry/{inquiryId}/escalate",
          "summary": "升级咨询为案例",
          "deprecated": false
        },
        {
          "name": "getInquiry",
          "httpMethod": "GET",
          "path": "/inquiry/{inquiryId}",
          "summary": "获取咨询详情",
          "deprecated": false
        },
        {
          "name": "issueInquiryRefund",
          "httpMethod": "POST",
          "path": "/inquiry/{inquiryId}/issue_refund",
          "summary": "发起退款",
          "deprecated": false
        },
        {
          "name": "provideInquiryRefundInfo",
          "httpMethod": "POST",
          "path": "/inquiry/{inquiryId}/provide_refund_info",
          "summary": "提供退款信息",
          "deprecated": true,
          "deprecationDate": "2026-03-16"
        },
        {
          "name": "provideInquiryShipmentInfo",
          "httpMethod": "POST",
          "path": "/inquiry/{inquiryId}/provide_shipment_info",
          "summary": "提供物流信息",
          "deprecated": false
        },
        {
          "name": "searchInquiries",
          "httpMethod": "GET",
          "path": "/inquiry/search",
          "summary": "搜索咨询",
          "deprecated": false
        },
        {
          "name": "sendInquiryMessage",
          "httpMethod": "POST",
          "path": "/inquiry/{inquiryId}/send_message",
          "summary": "发送消息",
          "deprecated": false
        }
      ]
    },
    "return": {
      "description": "退货管理",
      "methods": [
        {
          "name": "addShippingLabelInfo",
          "httpMethod": "POST",
          "path": "/return/{returnId}/add_shipping_label",
          "summary": "添加运单信息",
          "deprecated": false
        },
        {
          "name": "cancelReturnRequest",
          "httpMethod": "POST",
          "path": "/return/{returnId}/cancel",
          "summary": "取消退货请求",
          "deprecated": true,
          "deprecationDate": "2026-01-20"
        },
        {
          "name": "checkReturnEligibility",
          "httpMethod": "POST",
          "path": "/return/check_eligibility",
          "summary": "检查是否可以退货",
          "deprecated": true,
          "deprecationDate": "2026-01-20"
        },
        {
          "name": "createReturnRequest",
          "httpMethod": "POST",
          "path": "/return",
          "summary": "创建退货请求",
          "deprecated": false
        },
        {
          "name": "escalateReturn",
          "httpMethod": "POST",
          "path": "/return/{returnId}/escalate",
          "summary": "升级退货为案例",
          "deprecated": false
        },
        {
          "name": "getReturn",
          "httpMethod": "GET",
          "path": "/return/{returnId}",
          "summary": "获取退货详情",
          "deprecated": false
        },
        {
          "name": "getReturnEstimate",
          "httpMethod": "POST",
          "path": "/return/estimate",
          "summary": "获取退款和运费估算",
          "deprecated": false
        },
        {
          "name": "getReturnFiles",
          "httpMethod": "GET",
          "path": "/return/{returnId}/files",
          "summary": "获取退货相关文件",
          "deprecated": false
        },
        {
          "name": "getReturnPreferences",
          "httpMethod": "GET",
          "path": "/return/preference",
          "summary": "获取退货偏好设置",
          "deprecated": false
        },
        {
          "name": "getReturnShippingLabel",
          "httpMethod": "GET",
          "path": "/return/{returnId}/get_shipping_label",
          "summary": "获取退货运单",
          "deprecated": false
        },
        {
          "name": "getShipmentTrackingInfo",
          "httpMethod": "GET",
          "path": "/return/{returnId}/tracking",
          "summary": "获取物流跟踪信息",
          "deprecated": false
        },
        {
          "name": "issueReturnRefund",
          "httpMethod": "POST",
          "path": "/return/{returnId}/issue_refund",
          "summary": "发起退款",
          "deprecated": false
        },
        {
          "name": "markReturnReceived",
          "httpMethod": "POST",
          "path": "/return/{returnId}/mark_as_received",
          "summary": "标记已收到退货",
          "deprecated": false
        },
        {
          "name": "markReturnRefundReceived",
          "httpMethod": "POST",
          "path": "/return/{returnId}/mark_refund_received",
          "summary": "标记退款已收到",
          "deprecated": true,
          "deprecationDate": "2026-01-20"
        },
        {
          "name": "markReturnShipped",
          "httpMethod": "POST",
          "path": "/return/{returnId}/mark_as_shipped",
          "summary": "标记已发货",
          "deprecated": true,
          "deprecationDate": "2026-01-20"
        },
        {
          "name": "processReturnRequest",
          "httpMethod": "POST",
          "path": "/return/{returnId}/decide",
          "summary": "处理退货请求",
          "deprecated": false
        },
        {
          "name": "searchReturns",
          "httpMethod": "GET",
          "path": "/return/search",
          "summary": "搜索退货",
          "deprecated": false
        },
        {
          "name": "sendReturnMessage",
          "httpMethod": "POST",
          "path": "/return/{returnId}/send_message",
          "summary": "发送消息",
          "deprecated": false
        },
        {
          "name": "setReturnPreferences",
          "httpMethod": "POST",
          "path": "/return/preference",
          "summary": "设置退货偏好",
          "deprecated": false
        },
        {
          "name": "submitReturnFile",
          "httpMethod": "POST",
          "path": "/return/{returnId}/file/submit",
          "summary": "提交退货文件",
          "deprecated": false
        },
        {
          "name": "uploadReturnFile",
          "httpMethod": "POST",
          "path": "/return/{returnId}/file/upload",
          "summary": "上传退货文件",
          "deprecated": false
        },
        {
          "name": "voidShippingLabel",
          "httpMethod": "POST",
          "path": "/return/{returnId}/void_shipping_label",
          "summary": "作废运单",
          "deprecated": true,
          "deprecationDate": "2026-01-20"
        }
      ]
    }
  }
}
