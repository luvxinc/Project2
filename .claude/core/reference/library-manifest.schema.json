{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "library-manifest.schema.json",
  "type": "object",
  "required": ["slug", "category", "keywords", "source", "slices"],
  "properties": {
    "slug": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "category": { "type": "string" },
    "keywords": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "uniqueItems": true
    },
    "source": {
      "type": "object",
      "required": ["repo", "ref", "commit", "extractedAt"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "ref": { "type": "string", "minLength": 1 },
        "commit": { "type": "string", "minLength": 7 },
        "extractedAt": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": false
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["repo", "ref", "commit"],
        "properties": {
          "repo": { "type": "string" },
          "ref": { "type": "string" },
          "commit": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "mergePolicy": { "type": "string" },
    "slices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "module", "keywords", "sourcePath"],
        "properties": {
          "file": { "type": "string", "pattern": "^[0-9]{2}-.+\\.md$" },
          "module": { "type": "string" },
          "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "sourcePath": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
