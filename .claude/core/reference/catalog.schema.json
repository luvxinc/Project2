{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "catalog.schema.json",
  "type": "object",
  "required": ["version", "categories", "libraries"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "categories": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "uniqueItems": true
    },
    "libraries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["slug", "category", "keywords", "index"],
        "properties": {
          "slug": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "category": { "type": "string" },
          "keywords": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "minItems": 1,
            "uniqueItems": true
          },
          "index": { "type": "string", "pattern": "^tools/.+/INDEX\\.md$" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
