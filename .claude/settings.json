{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git show*)",
      "Bash(git branch*)",
      "Bash(git stash*)",
      "Bash(cd mgmt-v3 && ./gradlew *)",
      "Bash(cd apps/web && pnpm *)",
      "Bash(pnpm dev:*)",
      "Bash(pnpm build*)",
      "Bash(pnpm lint*)",
      "Bash(pnpm test*)",
      "Bash(curl -s http://localhost*)",
      "Bash(bash .claude/core/scripts/*)",
      "Bash(ls *)",
      "Bash(wc *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(cat .env*)",
      "Bash(cat */.env*)"
    ]
  }
}
